<Window x:Class="Skriptorium.UI.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen" Height="360" Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Grid Margin="10">
        <!-- Spalten für das Grid -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <!-- Erste Spalte -->
            <ColumnDefinition Width="57*"/>
            <!-- Zweite Spalte -->
        </Grid.ColumnDefinitions>

        <!-- TabControl für Allgemein und Pfade -->
        <TabControl Grid.ColumnSpan="2">
            <!-- Tab: Allgemein -->
            <TabItem Header="Allgemein">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Anzeigemodus -->
                        <RowDefinition Height="Auto"/>
                        <!-- Weitere Einstellungen -->
                        <RowDefinition Height="Auto"/>
                        <!-- Beispiel-Option -->
                        <RowDefinition Height="*"/>
                        <!-- Filler -->
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Anzeigemodus -->
                    <TextBlock Text="Anzeigemodus:" Grid.Row="0" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ComboTheme"
                              Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"
                              SelectedIndex="0"
                              SelectionChanged="ComboTheme_SelectionChanged">
                        <ComboBoxItem Content="Tagmodus" Tag="Light"/>
                        <ComboBoxItem Content="Nachtmodus" Tag="Dark"/>
                    </ComboBox>
                </Grid>
            </TabItem>

            <!-- Tab: Pfade -->
            <TabItem Header="Pfade">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Skript-Pfad Auswahl -->
                        <RowDefinition Height="Auto"/>
                        <!-- Weitere Pfad-Einstellungen -->
                        <RowDefinition Height="*"/>
                        <!-- Filler -->
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Skript-Pfad Auswahl -->
                    <TextBlock Text="Pfad zu Gothic Skripts:" Grid.Row="0" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtScriptPath"
                             Grid.Row="0" Grid.Column="1" Margin="0,0,5,5"
                             IsReadOnly="True"/>

                    <Button x:Name="BtnBrowse"
                            Grid.Row="0" Grid.Column="2"
                            Content="…"
                            Width="25" Margin="0,0,0,5"
                            Click="BtnBrowse_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Buttons: Schließen -->
        <Button Content="Schließen"
                Grid.Row="2" Grid.ColumnSpan="2"
                HorizontalAlignment="Right"
                Width="75" Height="19.94" Margin="0,260,15,0"
                Click="Close_Click"/>
    </Grid>
</Window>
