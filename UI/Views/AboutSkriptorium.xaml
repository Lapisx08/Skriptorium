<Window x:Class="Skriptorium.UI.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Über Skriptorium" Height="250" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Skriptorium ©" FontWeight="Bold" FontSize="16" Margin="0,0,0,5" />
        <TextBlock Text="Version: 1.0" Margin="0,0,0,5"/>
        <TextBlock Text="Entwickler: Lapis" Margin="0,0,0,5" />
        <TextBlock x:Name="TextBlockDatum" Margin="0,0,0,10"/>
        
        <TextBlock Text="Lizensiert unter GNU General Public License Version 3" TextWrapping="Wrap" Margin="0,0,0,20"/>
        <Button Content="Lizenz anzeigen" Width="120" HorizontalAlignment="Left" Click="LicenseButton_Click"/>
        <Button Content="Schließen" Width="80" HorizontalAlignment="Right" Margin="0,0,0,0" Click="CloseButton_Click"/>
    </StackPanel>
</Window>
