<UserControl x:Class="Skriptorium.UI.Views.SearchResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:Skriptorium.UI.Views">

    <UserControl.Resources>
        <!-- MahApps.Metro-Stil für TreeViewItem erzwingen -->
        <Style TargetType="TreeViewItem" BasedOn="{StaticResource MahApps.Styles.TreeViewItem}"/>
    </UserControl.Resources>

    <DockPanel>
        <!-- TreeView -->
        <TreeView x:Name="SearchResultsTree"
                  ItemsSource="{Binding SearchResults}"
                  MouseDoubleClick="SearchResultsTree_MouseDoubleClick">

            <!-- ItemContainerStyle -->
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <!-- Hier könnte ein EventSetter hin, wenn benötigt -->
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.Resources>
                <!-- Kontextmenü für Suchergebnisse -->
                <ContextMenu x:Key="SearchResultContextMenu">
                    <MenuItem Header="Zum Treffer navigieren" Click="MenuNavigateToMatch_Click" FontSize="12"/>
                </ContextMenu>
            </TreeView.Resources>

            <!-- Template für Nodes -->
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Matches}">
                    <StackPanel Orientation="Horizontal"
                                ContextMenu="{StaticResource SearchResultContextMenu}">
                        <Image Source="{Binding Icon}" Width="16" Height="16" Margin="2"/>
                        <TextBlock Text="{Binding Name}" Margin="2"/>
                    </StackPanel>
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        ContextMenu="{StaticResource SearchResultContextMenu}">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA62;" FontSize="12" Margin="2,2,4,2"/>
                                <TextBlock Text="{Binding DisplayText}" Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</UserControl>