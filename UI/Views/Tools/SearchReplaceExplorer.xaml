<UserControl x:Class="Skriptorium.UI.Views.SearchReplaceExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:Skriptorium.UI.Views"
             x:Name="Root">

    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style TargetType="TreeViewItem" BasedOn="{StaticResource MahApps.Styles.TreeViewItem}"/>
    </UserControl.Resources>

    <DockPanel>

        <!-- Such- und Ersetzen-Leiste -->
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="5,5,5,3">

            <!-- Suchleiste -->
            <Grid Height="26">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="26"/>
                    <ColumnDefinition Width="26"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtSearch"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Padding="4,0,4,0"
                         TextChanged="TxtSearch_TextChanged"/>

                <TextBlock Text="{DynamicResource Search2}"
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text.IsEmpty, ElementName=TxtSearch, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Match Case ToggleButton -->
                <ToggleButton Grid.Column="1"
                              Width="26"
                              Height="26"
                              Click="BtnMatchCase_Click"
                              ToolTip="{DynamicResource CaseSensitive}">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="Bd" Background="Transparent" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ToggleButtonActiveBackground}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xE8E9;"
                               FontSize="12"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </ToggleButton>

                <!-- Whole Word ToggleButton -->
                <ToggleButton Grid.Column="2"
                              Width="26"
                              Height="26"
                              Click="BtnWholeWord_Click"
                              ToolTip="{DynamicResource MatchWholeWord}">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="Bd" Background="Transparent" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ToggleButtonActiveBackground}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xE8AC;"
                               FontSize="12"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </ToggleButton>
            </Grid>

            <!-- Ersetzen-Leiste -->
            <Grid Height="26">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="26"/>
                    <ColumnDefinition Width="26"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtReplace"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Padding="4,0,4,0"/>

                <TextBlock Text="{DynamicResource Replace}"
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text.IsEmpty, ElementName=TxtReplace, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Replace All Button -->
                <Button Grid.Column="1"
                        Width="26"
                        Height="26"
                        Click="BtnReplaceAll_Click"
                        ToolTip="{DynamicResource ReplaceAll}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" Background="Transparent" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xE70F;"
                               FontSize="12"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Button>

                <!-- Collapse Button -->
                <Button Grid.Column="2"
                        Width="26"
                        Height="26"
                        Click="BtnCollapseMatches_Click"
                        ToolTip="{DynamicResource CollapseAll}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" Background="Transparent" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xF165;"
                               FontSize="12"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Button>
            </Grid>
        </StackPanel>

        <!-- TreeView -->
        <TreeView x:Name="SearchResultsTree" MouseDoubleClick="SearchResultsTree_MouseDoubleClick">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Matches}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Icon}" Width="16" Height="16" Margin="2"/>
                        <TextBlock Text="{Binding Name}" Margin="2"/>
                    </StackPanel>

                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="&#xEA62;"
                                           FontSize="12"
                                           Margin="2,2,4,2"/>
                                <TextBlock Text="{Binding LinePreview}"
                                           Loaded="HighlightTextBlock_Loaded"/>
                            </StackPanel>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</UserControl>
