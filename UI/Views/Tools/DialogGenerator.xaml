<mah:MetroWindow x:Class="Skriptorium.UI.Views.Tools.DialogGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Skriptorium.UI.Views.Tools"
        Title="{DynamicResource DialogGenerator}" TitleCharacterCasing="Normal" WindowStartupLocation="CenterScreen"
        Height="850" Width="700">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="350"/>
        </Grid.RowDefinitions>

        <!-- Oberes Eingabefeld -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <!-- Feste Breite für Labels -->
                <ColumnDefinition Width="400"/>
                <!-- Einheitliche Breite für Eingabefelder -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{DynamicResource DialogInstance}" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="dialogInstanceEntry" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <TextBlock Text="{DynamicResource NPCInstance}" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="npcInstanceEntry" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <TextBlock Text="{DynamicResource Description}" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="descriptionEntry" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <TextBlock Text="{DynamicResource DialogNumber}" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <ComboBox x:Name="dialogNumberDropdown" Grid.Row="3" Grid.Column="1" Margin="5">
                <!-- Zahlen 1–20 -->
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="13"/>
                <ComboBoxItem Content="14"/>
                <ComboBoxItem Content="15"/>
                <ComboBoxItem Content="16"/>
                <ComboBoxItem Content="17"/>
                <ComboBoxItem Content="18"/>
                <ComboBoxItem Content="19"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="21"/>
                <ComboBoxItem Content="22"/>
                <ComboBoxItem Content="23"/>
                <ComboBoxItem Content="24"/>
                <ComboBoxItem Content="25"/>
                <ComboBoxItem Content="26"/>
                <ComboBoxItem Content="27"/>
                <ComboBoxItem Content="28"/>
                <ComboBoxItem Content="29"/>
                <ComboBoxItem Content="30"/>
                <ComboBoxItem Content="999"/>
            </ComboBox>

            <TextBlock Text="{DynamicResource Important}" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <ComboBox x:Name="importantDropdown" Grid.Row="4" Grid.Column="1" Margin="5">
                <ComboBoxItem Content="{DynamicResource Yes}"/>
                <ComboBoxItem Content="{DynamicResource No}"/>
            </ComboBox>

            <TextBlock Text="{DynamicResource Permanent}" Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <ComboBox x:Name="permanentDropdown" Grid.Row="5" Grid.Column="1" Margin="5">
                <ComboBoxItem Content="{DynamicResource Yes}"/>
                <ComboBoxItem Content="{DynamicResource No}"/>
            </ComboBox>
        </Grid>

        <!-- Dynamischer Bereich -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="dialogPanel"/>
        </ScrollViewer>

        <!-- Button-Leiste -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
            <Button Click="AddDialogLine_Click" Margin="5">
                <TextBlock Text="{DynamicResource AddLine}"/>
            </Button>
            <Button Click="GenerateCode_Click" Margin="5">
                <TextBlock Text="{DynamicResource Generate}"/>
            </Button>
            <Button Click="CopyToClipboard_Click" Margin="5">
                <TextBlock Text="{DynamicResource Copy}"/>
            </Button>
            <Button Click="ResetFields_Click" Margin="5">
                <TextBlock Text="{DynamicResource Reset}"/>
            </Button>
        </StackPanel>

        <!-- Output -->
        <TextBox x:Name="outputText" Grid.Row="3" Margin="0,10,0,0"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" IsReadOnly="False" FontFamily="Consolas" FontSize="14"/>
    </Grid>
</mah:MetroWindow>
